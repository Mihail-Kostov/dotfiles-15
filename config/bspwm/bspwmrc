#! /bin/sh

# config options
bspc config border_width            2
bspc config top_padding             15
bspc config window_gap              10
bspc config split_ratio             0.50
bspc config borderless_monocle      true
bspc config gapless_monocle         true
bspc config focus_follows_pointer   true
bspc config history_aware_focus     true
bspc config auto_cancel             true

# desktops
bspc monitor -d 000 001 010 011

bspc desktop ^2 -l monocle

# Rules
bspc rule -a Firefox desktop=^2
bspc rule -a Gimp-2.8 desktop=^3 floating=on
bspc rule -a Gimp desktop=^3 floating=on
bspc rule -a clementine desktop=^4
bspc rule -a lxappearance floating=on center=true
bspc rule -a nitrogen floating=on center=true
bspc rule -a file-roller floating=on center=true
bspc rule -a "File Operation Progress" floating=on center=true

# colors
bspc config focused_border_color "#d0d0d0"
bspc config normal_border_color "#555555"
bspc config active_border_color "#5C5955"
bspc config focused_locked_border_color "#00C7D8"
bspc config normal_locked_border_color "#708D8F"
bspc config active_locked_border_color "#808C8D"
bspc config urgent_border_color "#C04747"
bspc config presel_border_color "#00adca"

# Autostart apps
compton &
nitrogen --restore
numlockx &
xsetroot -cursor_name left_ptr
bspwm_panel.sh &
