PAD="  "
RPAD="    "

# Desktop symbols
DFO="\356\200\200"
DO="\356\203\247"
DF="\356\203\267"

# color definitions
BAR_BG="#FF${background}"
BAR_FG="#FF${foreground}"

F_O_FG="#FF${color1}"
F_O_BG=${BAR_BG}
F_F_FG="#FF${green}"
F_F_BG=${BAR_BG}
F_U_FG="#FF${red}"
F_U_BG=${BAR_BG}
O_FG="#FF${color1}"
O_BG=${BAR_BG}
F_FG="#FF${grey2}"
F_BG=${BAR_BG}
U_FG="#FF${red}"
U_BG="#FF${grey2}"
